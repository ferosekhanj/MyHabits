@{
}
<style>
    img {
        width: 120px;
        height: 150px;
    }
</style>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width:30%">
        <strong>Sorry!</strong> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<div class="row">
    @foreach (var user in ViewBag.Users)
    {
        <div class="col-sm">
            <div class="card" style="width: 10rem;">
                <img src="~/images/@(user.Name.ToLower()).png" class="card-img-top" alt="...">
                <!--img src="~/images/@(user.Name).png" class="card-img-top" alt="..."-->
                <div class="card-body">
                    <h5 class="card-title">@user.Name</h5>
                    <p class="card-text">Money &#x20b9;@user.Reward</p>
                    <a asp-controller="Gifts" asp-action="Buy" asp-route-id="@user.Id" class="btn btn-primary">Buy Gift</a>
                </div>
            </div>
        </div>
    }
</div>
<div class="row" style="margin-top:20px;">
    <form class="form-inline" asp-action="CreditReward">
        <div class="form-group mx-sm-3 mb-2">
            <label for="tagid" class="sr-only">Card</label>
            <input type="text" class="form-control" id="tagid" name="tagid" placeholder="Swipe your card" autocomplete="off">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Add</button>

    </form>
</div>
<script>
    window.onload = function () {
        document.getElementById("tagid").focus();
    }
</script>